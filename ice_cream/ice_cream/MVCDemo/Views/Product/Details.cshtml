@model ice_cream.Models.Product

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <title>Details</title>
</head>
<body class="container col-md-6">
    <div>
        <h4>Product</h4>
        <hr />
        <table class="table table-bordered table-striped table-hover" id="dev-table">

            <tr>
                <td>
                    <b> @Html.DisplayName("ID Sản Phẩm")  </b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.ProductID)
                </td>

            </tr>
            <tr>
                <td>
                    <b>  @Html.DisplayName("Tên Danh Mục")</b>

                </td>
                <td>
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </td>

            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayName("Tên Sản Phẩm") </b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.ProductName)
                </td>

            </tr>
            <tr>
                <td>
                    <b>@Html.DisplayName("Nhà Cung Cấp") </b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.Suppliers.CompanyName)
                </td>

            </tr>
            <tr>
                <td>
                    <b> @Html.DisplayName("Khối Lượng")</b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.QuantityPerUnit)
                </td>

            </tr>
            <tr>
                <td>
                    <b>  @Html.DisplayName("Giá")</b>
                </td>
                <td>
                    @Html.DisplayFor(model => model.UnitPrice)
                </td>

            </tr>
            <tr>
                <td>
                    <b> @Html.DisplayName("Số Lượng") </b>

                </td>
                <td>
                    @Html.DisplayFor(model => model.UnitsInStock)
                </td>

            </tr>

            <tr>
                <td>
                    <b> @Html.DisplayName("Khuyến mại") </b>
                </td>
                <td>
                    @if (Model.Discontinued == true)
                    {
                        @Html.Label("Có")


                    }
                    else
                    {
                        @Html.Label("Không")
                    }
                </td>

            </tr>



        </table>

    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Back to List", "Index", new { @class = "btn btn-default" })
    </p>
</body>
</html>
